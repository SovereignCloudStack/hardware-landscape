---
clouds:
  admin:
    auth:
      username: admin
      project_name: admin
      auth_url: https://api-internal.zone1.landscape.scs.community:5000/v3
      project_domain_name: default
      user_domain_name: default
    cacert: /etc/ssl/certs/ca-certificates.crt
    identity_api_version: 3
    endpoint_type: internalURL
  octavia:
    auth:
      username: octavia
      project_name: service
      auth_url: https://api-internal.zone1.landscape.scs.community:5000/v3
      project_domain_name: default
      user_domain_name: default
    cacert: /etc/ssl/certs/ca-certificates.crt
    identity_api_version: 3
  openstack:
    auth:
      username: admin
      project_name: openstack
      auth_url: https://api-internal.zone1.landscape.scs.community:5000/v3
      project_domain_name: default
      user_domain_name: default
    cacert: /etc/ssl/certs/ca-certificates.crt
    identity_api_version: 3
{% for project_item in scs_openstack_projects | default([]) %}
  {{ project_item.name  }}:
    auth:
      username: "{{ project_item.name  }}-admin"
      project_name: "{{ project_item.name  }}"
      auth_url: https://api-internal.zone1.landscape.scs.community:5000/v3
      project_domain_name: default
      user_domain_name: default
    cacert: /etc/ssl/certs/ca-certificates.crt
    identity_api_version: 3
    endpoint_type: internalURL
{% endfor %}
