---
services:
  samba:
    container_name: "{{ samba_container_name }}"
    restart: unless-stopped
    image: "{{ samba_image }}"
    ports:
      - "{{ samba_host }}:{{ samba_port }}:3128"
    volumes:
      - "{{ samba_configuration_directory }}/conf.d:/etc/samba/conf.d:ro"
      - samba:/var/spool/samba
    healthcheck:
      test: pgrep -f '/usr/sbin/samba -f /etc/samba/smb.conf -NYC'

networks:
  default:
    driver: bridge
    driver_opts:
      com.docker.network.driver.mtu: {{ docker_network_mtu }}
    ipam:
      driver: default
      config:
        - subnet: {{ samba_network }}

volumes:
  samba:
